{
  "name": "irondistribuidorasc",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:staging": "dotenv -e .env.staging -- next dev -p 3001",
    "build": "dotenv -e .env.local -- prisma generate && next build",
    "build:staging": "dotenv -e .env.staging -- prisma generate && next build",
    "start": "next start",
    "lint": "eslint",
    "commit": "cz",
    "postinstall": "dotenv -e .env.local -e .env -- prisma generate || true",
    "prepare": "husky",
    "db:migrate:staging": "dotenv -e .env.staging -- prisma migrate deploy",
    "db:seed:staging": "dotenv -e .env.staging -- prisma db seed",
    "db:studio:staging": "dotenv -e .env.staging -- prisma studio"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@heroicons/react": "^2.1.5",
    "@heroui/react": "2.6.11",
    "@heroui/theme": "2.4.5",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.19.0",
    "@supabase/supabase-js": "^2.86.0",
    "@vercel/analytics": "^1.5.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^11.11.17",
    "next": "16.0.7",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.66.1",
    "resend": "^6.5.2",
    "sonner": "^2.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20",
    "@types/papaparse": "^5.5.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "baseline-browser-mapping": "^2.8.32",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "husky": "^9.1.7",
    "postcss": "^8.4.49",
    "prisma": "^6.19.0",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
